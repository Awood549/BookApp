<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../../layout/head') %>
  </head>
  <body>
    <%- include('../../layout/header') %>
    <main>
        <ul>
            <li>
              <img src=<%= book.image %>>
             <h3> <%= book.title %> </h3>
              <i><%= book.author %></i>
              <p><%= book.description %></p>
              <p>Bookshelf: <%= book.bookshelf %> </p>
              <form method="post" action="/books:id"> 
                <input type="hidden" name="_method" value="put">

                <%- include('../../layout/edit', {book: book}) %>
                
                <select>
                  <% bookshelves.forEach( shelf => { %>
                  <option><%= shelf.bookshelf %></option>
                  <% }) %>
                </select>
                <button type="submit"> Update Details </button>
              </form>
            </li>
          </ul>
    </main>
    <%- include('../../layout/footer') %>
</html>